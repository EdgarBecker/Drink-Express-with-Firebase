<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfilFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DFFAD3">

            <TextView
                android:id="@+id/profilbotnav_kategorie_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Kategorie"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilbotnav_kategorie_btn"
                app:layout_constraintStart_toStartOf="@+id/profilbotnav_kategorie_btn"
                app:layout_constraintTop_toBottomOf="@+id/profilbotnav_kategorie_btn" />

            <TextView
                android:id="@+id/profilbotnav_Warenkorb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Warenkorb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintStart_toStartOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintTop_toBottomOf="@+id/profilbotnav_warenkorb_btn" />

            <ImageView
                android:id="@+id/notification_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/round_circle_24"
                app:layout_constraintBottom_toTopOf="@+id/profilbotnav_Warenkorb_tv"
                app:layout_constraintEnd_toEndOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintHorizontal_bias="0.62"
                app:layout_constraintStart_toStartOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintTop_toTopOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintVertical_bias="0.18" />

            <ImageButton
                android:id="@+id/profilbotnav_warenkorb_btn"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/outline_shopping_cart_24"
                app:layout_constraintBottom_toTopOf="@+id/profilbotnav_kategorie_tv"
                app:layout_constraintEnd_toStartOf="@+id/profilbotnav_profil_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/profilbotnav_kategorie_btn"
                app:layout_constraintTop_toTopOf="@+id/profilbotnav_kategorie_btn" />

            <ImageButton
                android:id="@+id/profilbotnav_kategorie_btn"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/outline_local_drink_24"
                app:layout_constraintBottom_toBottomOf="@+id/profilbotnav_home_btn"
                app:layout_constraintEnd_toStartOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/profilbotnav_home_btn"
                app:layout_constraintTop_toTopOf="@+id/profilbotnav_home_btn" />

            <ImageButton
                android:id="@+id/profilbotnav_home_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/outline_home_24"
                app:layout_constraintEnd_toStartOf="@+id/profilbotnav_kategorie_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/profilbotnav_profil_btn"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/round_person_24"
                app:layout_constraintBottom_toTopOf="@+id/profilbotnav_Warenkorb_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/profilbotnav_warenkorb_btn"
                app:layout_constraintTop_toTopOf="@+id/profilbotnav_warenkorb_btn" />

            <TextView
                android:id="@+id/profilbotnav_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilbotnav_home_btn"
                app:layout_constraintStart_toStartOf="@+id/profilbotnav_home_btn"
                app:layout_constraintTop_toBottomOf="@+id/profilbotnav_home_btn" />

            <TextView
                android:id="@+id/profilbotnav_profil_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Profil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilbotnav_profil_btn"
                app:layout_constraintStart_toStartOf="@+id/profilbotnav_profil_btn"
                app:layout_constraintTop_toBottomOf="@+id/profilbotnav_profil_btn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/drink_express_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profile_einstellungen_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/home_green" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/baseline_login_24"
        android:drawableTint="@color/home_green"
        android:text="Anmelden"
        android:textColor="@color/home_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/home_green"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stempel\nkarten"
            android:textAlignment="center"
            android:textColor="@color/home_green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Punkte"
            android:textAlignment="center"
            android:textColor="@color/home_green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Geschenk\nkarten"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/home_green"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/baseline_local_post_office_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:text="Posteingang"
        android:textAlignment="textStart"
        android:backgroundTint="@color/white"
        android:textColor="@color/home_green"
        android:drawableTint="@color/home_green"
        app:strokeWidth="2dp"
        app:strokeColor="@color/home_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_shopping_bag_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/home_green"
        android:text="Bestellungen"
        android:textAlignment="textStart"
        android:textColor="@color/home_green"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:strokeColor="@color/home_green"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_star_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/home_green"
        android:text="Favoriten"
        android:textAlignment="textStart"
        android:textColor="@color/home_green"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:strokeColor="@color/home_green"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawableTint="@color/home_green"
        android:text="Benötigts du hilfe?"
        android:textAlignment="textStart"
        android:textColor="@color/home_green"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:strokeColor="@color/home_green"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profil_abmelden_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawableTint="@color/rot"
        android:text="Abmelden"
        android:textAlignment="textStart"
        android:textColor="@color/rot"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:strokeColor="@color/rot"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>